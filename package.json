{
  "name": "code-llamas",
  "displayName": "code llamas",
  "description": "refactoring assistance",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": ["Other"],

  "activationEvents": [
    "onView:codellamas_activityView",
    "onCommand:code-llamas.helloWorld",
    "onCommand:code-llamas.submitCode"
  ],

  "main": "./out/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "code-llamas.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "code-llamas.submitCode", 
        "title": "Submit Code",
        "icon": "$(cloud-upload)"
      }
    ],

    "menus": {
      "editor/title": [
        {
          "command": "code-llamas.submitCode",
          "group": "navigation@99",
          "when": "resourceLangId != ''"
        }
      ]
    },

    "viewsContainers": {
      "activitybar": [
        {
          "id": "codellamas_activity",
          "title": "CodeLlamas",
          "icon": "media/code-llamas.png"
        }
      ]
    },

    "views": {
      "codellamas_activity": [
        {
          "id": "codellamas_activityView",
          "name": "Activity",
          "type": "webview"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
